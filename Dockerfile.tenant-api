# Build stage
FROM golang:1.25-alpine AS builder

RUN apk add --no-cache git

WORKDIR /app

COPY go.mod go.sum ./
RUN go mod download

COPY . .
RUN CGO_ENABLED=0 GOOS=linux go build -buildvcs=false -o /tenant-api ./cmd/tenant-api

# Run stage
FROM alpine:3.21

RUN apk add --no-cache ca-certificates tzdata

WORKDIR /app

COPY --from=builder /tenant-api .
COPY migrations/ ./migrations/

RUN mkdir -p /app/uploads

EXPOSE 8080

CMD ["./tenant-api"]
